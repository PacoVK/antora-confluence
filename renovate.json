{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automergeType": "branch",
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automergeType": "branch",
      "automerge": true
    }
  ]
}
